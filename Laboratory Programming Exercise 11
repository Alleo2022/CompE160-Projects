#include <stdio.h>
#include <stdlib.h>
#define N 100

void swap(int*element1Ptr, int*element2Ptr) {
	int*holder = *element1Ptr;
	*element1Ptr = *element2Ptr;
	*element2Ptr = holder;
}
int main(void) {
	int a[N];
	int swapCount = 0;
	int compCount = 0;

	for (int i = 0; i < N; i++) {
		a[i] = (rand() % N + 1);
	}

	for (int k = 0; k < N; k++) {

		for (int i = 0; i < N - 1 - k; i++) {
			if (a[i] > a[i + 1]) {
				swap(&a[i], &a[i + 1]);
				swapCount++;
			}
			compCount++;
		}
	}

	printf("Array length: %d\n", N);
	printf("Number of comparisons made: %d\n", compCount);
	printf("Number of swaps made: %d\n", swapCount);

	return 0;
}
